<p id="notice"><%= notice %></p>

<h1>Daily Records</h1>

<table>
  <thead>
    <tr>
      <th>Systolic bp</th>
      <th>Diastolic bp</th>
      <th>Heart rate</th>
      <th>Notes</th>
      <th>Care receiver</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @daily_records.each do |daily_record| %>
      <tr>
        <td><%= daily_record.systolic_bp %></td>
        <td><%= daily_record.diastolic_bp %></td>
        <td><%= daily_record.heart_rate %></td>
        <td><%= daily_record.notes %></td>
        <td><%= daily_record.care_receiver_id %></td>
        <td><%= daily_record.user_id %></td>
        <td><%= link_to 'Show', daily_record %></td>
        <td><%= link_to 'Edit', edit_daily_record_path(daily_record) %></td>
        <td><%= link_to 'Destroy', daily_record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Daily Record', new_daily_record_path %>
